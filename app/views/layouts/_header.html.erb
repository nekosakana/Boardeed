<header>
<div class="navbar navbar-fixed-top navbar-default">
  <div class="container-fluid">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-links" aria-expanded="false">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="/">Bordeed</a>
    <% if admin_signed_in? %>
      <p class="navbar-text">管理者ログイン中</p>
      <div class="collapse navbar-collapse" id="navbar-links">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'ユーザー一覧',admins_users_path %></li>
          <li><%= link_to 'ボードゲーム一覧',admins_games_path %></li>
          <li><%= link_to 'タグ一覧',admins_tags_path %></li>
          <li><%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %></li>
        </ul>
      </div>
    <% elsif user_signed_in? %>
      <p class="navbar-text">ようこそ <%= current_user.name %> さん !</p>
      <div class="collapse navbar-collapse" id="navbar-links">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to '新規投稿',new_blog_path %></li>
          <li><%= link_to '記事一覧',blogs_path %></li>
          <li><%= link_to 'マイページ',user_path(current_user.id) %></li>
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    <% else %>
      <p class="navbar-text">ようこそ ゲスト さん !</p>
      <div class="collapse navbar-collapse" id="navbar-links">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to '記事一覧',blogs_path %></li>
          <li><%= link_to '新規登録',new_user_registration_path %></li>
          <li><%= link_to 'ログイン', new_user_session_path %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
</header>
