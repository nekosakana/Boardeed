
<div class="col-xs-8">
<div class="create-box">

  <h2 class="mypage-edit">登録情報編集</h2>

  <%= form_for(@user,class:"form-inline") do |f| %>

  <div class="form-group has-feedback">
    <label>ユーザー名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    <span class="glyphicon glyphicon-envelope form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
  <label>ユーザーアイコン</label>
        <div class="user-edit-image">
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
        </div>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>


  <div class="actions col-xs-offset-2", style="margin-top: 30px">
    <%= f.submit "編集内容を保存する", class: "btn btn-primary edit-btn" %>
    <%= link_to "退会する","/confirm", class: "btn btn-danger" %>
  </div>

<% end %>

</div>
</div>
