
<div class="col-xs-offset-1 col-xs-10">
<div class="show-box">
			<h2>ボードゲーム一覧</h2>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th class="col-xs-2 th1">ゲームID</th>
						<th class="ol-xs-3 th2">ゲーム名</th>
						<th class="ol-xs-3 th3">登録日</th>
						<th class="ol-xs-3 th4">ブログ数</th>
					</tr>
				</thead>
				<tbody>
					<% @games.each do |game| %>
					<tr>
						<td><%= game.id %></td>
						<td><%= game.name %></td>
						<td><%= game.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
                        <td><%= game.blog_ids.count %></td>
						<td><%= link_to "詳細",admins_game_path(game.id) %></td>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
            <%= paginate @games %>
			</div>
</div>

