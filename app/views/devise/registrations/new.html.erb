
<div class="col-md-4 col-md-offset-4">
<div class="login-box">
  <div class="form-user style-1 rounded has-shadow-1">
    <div class="form-header text-center">
<h2 class="form-header-title">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"form-inline") do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group has-feedback">
    <label class="sr-only" for="inputname">ユーザー名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", id:"inputname", placeholder:"ユーザー名" %>
    <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <label class="sr-only" for="inputemail">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputemail", placeholder:"メールアドレス" %>
    <span class="glyphicon glyphicon-envelope form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <label class="sr-only" for="inputPassword">パスワード(6文字以上)</label>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword", placeholder:"パスワード(6文字以上)" %>
    <span class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <label class="sr-only" for="inputPassword">パスワード(確認用)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPassword", placeholder:"パスワード(確認用)" %>
    <span class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
</div>

