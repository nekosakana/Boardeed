
 <div class="col-md-4 col-md-offset-4">
 <div class="login-box">
  <div class="form-user style-1 rounded has-shadow-1">
    <div class="form-header text-center">
<h2 class="form-header-title">ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-inline") do |f| %>
  <div class="form-group has-feedback">
    <label class="sr-only" for="inputname">ユーザー名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", id:"inputname", placeholder:"ユーザー名" %>
    <span class="glyphicon glyphicon-user form-control-feedback" aria-hidden="true"></span>
  </div>

  <div class="form-group has-feedback">
    <label class="sr-only" for="inputPassword">パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
    <span class="glyphicon glyphicon-lock form-control-feedback" aria-hidden="true"></span>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>

